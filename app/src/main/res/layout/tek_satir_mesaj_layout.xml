<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tekMesajRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#FFF">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:background="#FFF">

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical"
                          android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        tools:src="@drawable/ic_action_user"
                        android:layout_centerInParent="true"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorAccent"
                        android:scaleType="centerCrop"
                        android:id="@+id/imgMesajProfilResim"/>
                <TextView
                        android:id="@+id/tvMesajUserAd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ercinbark"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/tvMesajTarih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2001.12.21 09:43:43"
                        android:textSize="8sp"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tvMesaj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="14dp"
                    tools:text="mecmemkcmkemkcmkemkcmkemkcmkemkmkemcmekmekmkemckmekmckemkmcekmckemckem"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>