<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".dialogs.SifremiUnuttumDialogFragment">


    <TextView
            android:text="Sifreyi Tekrar Gönder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etSifreyiTekrarGonder" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="E-Mail"/>
    <Button
            android:text="Gönder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSifreyiUnuttumGonder"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etSifreyiTekrarGonder"
            app:layout_constraintEnd_toEndOf="@+id/etSifreyiTekrarGonder" android:layout_marginEnd="8dp"/>
    <Button
            android:text="İptal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSifreyiUnuttumIptal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etSifreyiTekrarGonder"
            app:layout_constraintStart_toStartOf="@+id/etSifreyiTekrarGonder" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>